@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ForgetPassword</h1>

<div class="container text-center">
    <div class="w-50 bg-light mx-auto m-3">
        <form asp-action="ForgetPassword" class="m-4">
            <input class="form-control my-3" type="email" asp-for="Email" placeholder="Email" required/>
            <span asp-validation-for="Email"></span>  
            <input type="submit" value="Forget Password"/>
        </form> 
    </div>
</div>
@section Scripts {
     <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
     <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
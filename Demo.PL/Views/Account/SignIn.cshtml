@model LoginViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1 class="text-light">SignIn</h1>


<div class="container text-center">
    <div class="w-50 mx-auto ">
        <form asp-action="SignIn" class="py-4">
            <input class="form-control my-3 w-100 rounded bg-light border-0 " type="email" asp-for="Email" placeholder="Email" required />
            <span asp-validation-for="@Model.Email"></span>
            <input class="form-control my-3 w-100 rounded bg-light border-0 " type="password" asp-for="Password" placeholder="Password" required />
            <span asp-validation-for="@Model.Password"></span>
            <div >
                <label>
                    <input type="checkbox" asp-for="RememberMe"/>
                    <span>Remember Me</span>
                </label>

            </div>        
            <input class="form-control my-3 rounded-pill bg-light border-0 " type="submit" value="SIGNIN" />
        </form>
        <div class="row justify-content-between">
            <div class="col-6">
                 <p>you Don't have an Account ? <a asp-action="SignUp"> Register Now!</a></p>
            </div>
            <div class="col-6 mt-3">
                <p><a asp-action="ForgetPassword" asp-controller="Account"> Forgot Password</a></p>
            </div>

        </div>
    </div>
</div>
@section Scripts {
                    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
                <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
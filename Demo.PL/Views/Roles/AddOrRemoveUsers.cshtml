@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "Add Or Remove Users";
    var RoleId = ViewBag.RoleId;
}

<h1>Add Or Remove Users</h1>
<form  asp-action="AddOrRemoveUsers" asp-route-RoleId="@RoleId" class="my-3">
    @for(int i =0; i < Model?.Count ; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected" />
                    <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>
            <input type="hidden" asp-for="@Model[i].UserId" />
            <input type="hidden" asp-for="@Model[i].UserName" />

    }

    <div class="my-3">
        <input class="btn btn-success" type="submit" value="Update" />
        <a asp-action="Update" asp-controller="Roles"  asp-route-id="@RoleId"  class="btn btn-light">Cancel</a>
    </div>
</form>

